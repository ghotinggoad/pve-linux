{
  "proxmox": {
    "tls_insecure": true,
    "api_endpoint": "pve.domain.local",
    "api_token_id": "user@pam!token_id",
    "api_token_key": "a1b2c3d4-e5f6-g7h8-i9j0-k1l2m3n4o5p6",
    "datastores": {
      "snippets": "local",
      "imports": "local",
      "domains": "local-lvm",
      "backups": "local"
    },
    "ssh": {
      "username": "user",
      "nodes": {
        "pve": {
          "ip_address": "127.0.0.1"
        }
      }
    }
  },
  "templates": {
    "vm": {
      "node": "vm",
      "count": 1,
      "id_offset": 100,
      "hostname_prefix": "node",
      "vcpu_count": 2,
      "memory_size_min": 2,
      "memory_size_max": 4,
      "root_vdisk": {
        "size": 16,
        "cloud_image_filename": "noble-server-cloudimg-amd64.img"
      },
      "data_vdisks": {
        "data": {
          "interface": "scsi1",
          "size": 16,
          "persistent_mounts": {
            "opt": {
              "size": 16,
              "fstype": "ext4",
              "mount_target": "/opt"
            }
          }
        }
      },
      "tmpfs_mounts": {
        "tmp": {
          "size": 2,
          "mount_target": "/tmp"
        }
      },
      "nics": {
        "net1": {
          "default": true,
          "bridge": "vmbr0",
          "cidr": "192.168.1.0/24",
          "ip_offset": 0,
          "gateway": "192.168.1.1",
          "dns_servers": ["192.168.1.1"]
        },
        "net2": {
          "bridge": "vmbr1",
          "cidr": "192.168.50.0/24",
          "ip_offset": 0,
          "gateway": "192.168.50.1",
          "dns_servers": ["192.168.50.1"]
        }
      },
      "ssh": {
        "nic": "net1",
        "username": "ansible",
        "public_key": "ssh-ed25519 AAAA... user@domain.local"
      }
    }
  }
}
